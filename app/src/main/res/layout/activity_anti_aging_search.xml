<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal">
                <EditText
                    android:id="@+id/username"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="@drawable/edit_text"
                    android:ems="10"
                    android:hint="SEARCH"
                    android:inputType="textPersonName"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:selectAllOnFocus="true"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/svg_search"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/image" />
            </LinearLayout>

            <TextView
                android:id="@+id/item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Recommended Hospitals:"
                android:background="@drawable/radius5"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:lineSpacingExtra="30dp"
                        android:paddingStart="20dp"
                        android:text="Hospital"
                        android:textColor="@color/colorLogin"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingTop="3dp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/item1"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/yellow"
                        android:text="1. La Source"
                        android:paddingTop="5dp"
                        android:drawableStart="@drawable/svg_triangle"
                        android:drawablePadding="10dp"/>
                    <TextView
                        android:id="@+id/item2"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="2. La Source"
                        android:paddingTop="5dp"
                        android:paddingStart="26dp"/>
                    <TextView
                        android:id="@+id/item3"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="3. La Source"
                        android:paddingTop="5dp"
                        android:paddingStart="26dp"/>
                    <TextView
                        android:id="@+id/item4"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="4. La Source"
                        android:paddingTop="5dp"
                        android:paddingStart="26dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:background="@color/white">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:lineSpacingExtra="30dp"
                        android:paddingStart="20dp"
                        android:text="Nation"
                        android:textColor="@color/colorLogin"
                        android:textSize="16sp"
                        android:paddingTop="3dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/item5"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/yellow"
                        android:text="Switzerland"
                        android:paddingTop="5dp"
                        android:drawablePadding="10dp"
                        android:paddingStart="20dp"/>

                    <TextView
                        android:id="@+id/item6"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="Switzerland"
                        android:paddingTop="5dp"
                        android:paddingStart="20dp"/>
                    <TextView
                        android:id="@+id/item7"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="Switzerland"
                        android:paddingTop="5dp"
                        android:paddingStart="20dp"/>
                    <TextView
                        android:id="@+id/item8"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="Switzerland"
                        android:paddingTop="5dp"
                        android:paddingStart="20dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>